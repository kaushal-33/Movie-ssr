<%- include("partials/start.ejs")%>
<main class="container my-5">
  <div class="row">

    <div class="col-md-4">
      <img src="/<%=movie.posterURL%>" class="img-fluid rounded shadow" alt="<%= movie.movieName %>">
    </div>

    <div class="col-md-8">
      <h1><%= movie.movieName %></h1>

      <p class="text-muted">
        <strong>Genre:</strong> <%= movie.genre %> <br>
        <strong>Release Date:</strong> <%= movie.date %> <br>
        <strong>Rating:</strong> ⭐ <%= movie.rating %>/5
      </p>

      <hr>

      <h5>Movie Details</h5>
      <p><%= movie.details %></p>

      <a href="/admin" class="btn btn-secondary mt-3">
        ⬅ Back to Movies
      </a>
    </div>

  </div>
</main>
<%- include("partials/end.ejs")%>